 <script>
$('#selectBox').change(function(){
 
    var text = $(this).val();
  $.getJSON('http://api.openweathermap.org/data/2.5/weather', {
    q     : text,
    appid : 'd85656693c7f3580cc54c95e2f3d2989'
  }, function(data, textStatus, jqXHR) {
    var city    = data.name;
    var country = data.sys.country;
	var symbol = data.weather.description;
	var temp =data.main.temp - 273.15;
	var pressure = data.main.pressure;
	var humidity = data.main.humidity;
	var wind = data.wind.speed;
    var weather = data.weather[0].description;
    
    // Prints: "Current weather for Castlebar, IE: light rain"
    $('#weather').html('<center><br><h5>Current weather for <span class="red-text">' + city + ', ' + country + '</span></h5><h5><table><tr><td>'+'Weather </td><td>:</td><td> ' + weather +'</td></tr><tr><td>Temperature </td><td>: </td><td>'+ temp +'&#8451;</td></tr><tr><td>'+ 'Pressure </td><td>: </td><td>'+ pressure +'hpa</td></tr><tr><td>'+ 'Humidity </td><td>:</td><td>' + humidity +'%</td></tr><tr><td>'+'Wind </td><td>:</td><td>'+ wind+'m/s</td></tr></table>' +'</h5></center>');
  });
});
